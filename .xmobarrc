Config { font = "xft:Sans-8.6:bold"
		, borderColor = "black"
		, border = TopB
		, bgColor = "black"
		, fgColor = "grey"
		, position = Top
		, lowerOnStart = False
		, persistent = False
		, hideOnStart = False
		, commands =
			[ Run MultiCpu ["-t", "CPU:[<autototal>]%", "-L", "4", "-H", "50"
							, "--normal", "green", "--high", "red"] 20
			, Run CpuFreq ["-t", "<cpu0>/<cpu1>/<cpu2>/<cpu3>"
							, "-L", "1", "-H", "2"
							, "-l", "lightblue", "-n","orange", "-h", "red"] 50
			, Run Memory ["-t", "Mem:<usedratio>%"] 50
			, Run Network "eth0" ["-t", "<dev>:[<rx>KB|<tx>KB]", "-L", "0", "-H", "32"
							, "--normal", "green", "--high", "red"] 20
			, Run Network "wlan0" ["-t", "<dev>:[<rx>KB|<tx>KB]", "-L", "0", "-H", "32"
							, "--normal", "green", "--high", "red"] 20
			, Run BatteryP ["BAT0"]	["-t", "<acstatus> (<left>%)"
							, "-L", "10", "-H", "80", "-p", "3"
							, "-l", "red", "-h", "green"
							, "--", "-O", "AC: <fc=orange>Charging</fc>"
							, "-i", "AC: <fc=green>Idle</fc>"
							, "-o", "Battery"
							, "-L", "-15", "-H", "-5"] 300 
			, Run StdinReader
		]
		, sepChar = "%"
		, alignSep = "}{"
		, template = "%StdinReader% }{ %multicpu% %cpufreq%  <fc=#ffffff>||</fc>  %memory%  <fc=#ffffff>||</fc>  %eth0%/%wlan0%  <fc=#ffffff>||</fc>  %battery%"
}
