unmap [normal]     q
unmap [fullscreen] q
unmap [normal]     p
unmap [fullscreen] p

set recolor-keephue
set selection-clipboard clipboard


map [normal]     <A-1> set "first-page-column 1"
map [fullscreen] <A-1> set "first-page-column 1"
map [normal]     <A-2> set "first-page-column 2"
map [fullscreen] <A-2> set "first-page-column 2"

map [normal]     <C-k> navigate previous
map [fullscreen] <C-k> navigate previous
map [normal]     <C-j> navigate next
map [fullscreen] <C-j> navigate next

map [normal]     <F11> toggle_fullscreen
map [fullscreen] <F11> toggle_fullscreen
map [normal]     <F5> reload
map [fullscreen] <F5> reload

map [normal] <C-9> zoom in
map [normal] <C-0> zoom out

map [normal]     <Tab> toggle_index
map [fullscreen] <Tab> toggle_index
map [normal]     d toggle_page_mode 2
map [fullscreen] d toggle_page_mode 2

map [normal]     9 adjust_window width
map [fullscreen] 9 adjust_window width
map [normal]     0 adjust_window best-fit
map [fullscreen] 0 adjust_window best-fit

map [normal]     <Space> scroll down
map [fullscreen] <Space> scroll down
map [normal]     <S-Space> scroll up
map [fullscreen] <S-Space> scroll up
